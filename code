def main():
    k, n, w = map(int, input().split())
    # total cost = k * (1 + 2 + ... + w) = k * w*(w+1)/2
    total_cost = k * w * (w + 1) // 2
    # how much he needs to borrow:
    borrow = total_cost - n
    if borrow < 0:
        borrow = 0
    print(borrow)

if __name__ == "__main__":
    main()
